<nav class="navbar" role="navigation">
  <div class="navbar-logo">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'logo.png', class: "nav-logo"%>
    <% end %>
  </div>
  <div class="navbar-tab">
    <ul class="list-nav">
      <li class="navlink margin-right"><%= link_to "Formations", formations_path, class: "navbar-brand", class: is_active?("formations") %></li>
      <li class="navlink margin-right"><%= link_to "Le Blog", articles_path, class: "navbar-brand", class: is_active?("articles") %></li>
      <li class="navlink margin-right"><%= link_to "À propos", pages_about_path, class: "navbar-brand", class: is_active?("about") %></li>
      <li class="navlink"><%= link_to "Contact", pages_contact_path, class: "navbar-brand", class: is_active?("contact") %></li>
      <li>
        <% if admin_signed_in? %>
          <%= link_to destroy_admin_session_path, class: "logout", method: :delete do %>
            <button class="btn-sign-out">
              <%= image_tag 'logout.png', class: "nav-logout"%>
            </button>
          <% end %>
        <% else %>
        <% end %>
      </li>
    </ul>
  </div>

  <%# MENU DOTS %>
  <a id="dotsMenu" class="btn menu" data-target="#modalNavigation" data-toggle="modal">
    <%= image_tag 'menu (1).png', class: "open-menu"%>
  </a>
</nav>

<div class="modal fade" id="modalNavigation" role="dialog"  aria-hidden="true">
  <% if admin_signed_in? %>
    <%= link_to destroy_admin_session_path, class: "logout", method: :delete do %>
      <button class="btn-sign-out">
        <%= image_tag 'logout.png', class: "nav-logout"%>
      </button>
    <% end %>
  <% else %>
  <% end %>
  <%# BUTTON CLOSE %>
  <a id="dotsMenuClose" class="btn menu active" data-target="#modalNavigation" data-toggle="modal" aria-label="Close" class="close" data-dismiss="modal">
    <%= image_tag 'quit (1).png', class: "close-menu"%>
  </a>


  <%# MODAL %>
  <div class="modal-dialog">
    <div class="modal-content" role="document">

      <ul id="menuModal" class="list-group text-center">
        <%# LIST %>

        <hr class="top">

            <%= link_to "Accueil", root_path, class: "nav-link list-group-item menu-item", class: is_active?("home") %>
            <%= link_to "Formations", formations_path, class: "nav-link list-group-item menu-item", class: is_active?("formations") %>
            <%= link_to "Le Blog", articles_path, class: "nav-link list-group-item menu-item", class: is_active?("articles") %>
            <%= link_to "À propos", pages_about_path, class: "nav-link list-group-item menu-item", class: is_active?("about") %>
            <%= link_to "Contact", pages_contact_path, class: "nav-link list-group-item menu-item", class: is_active?("contact") %>


        <%# MENU PROFIL / LOG OUT START %>
        <hr class="bottom">

        <li class="footer-menu list-inline ">
          <div class="d-flex justify-content-center">
              <a href="https://www.facebook.com/Wkerautret/" target="_blank"><%= image_tag 'icone-facebook.png', class: "social-icon"%></a>
              <a href="https://www.youtube.com/channel/UC2c_l9vLefW82NbaUeqy6dA/featured" target="_blank"><%= image_tag 'icone-youtube.png', class: "social-icon"%></a>
              <a href="https://www.instagram.com/will_le_mono/" target="_blank"><%= image_tag 'icone-instagram.png', class: "social-icon"%></a>
          </div>
        </li>
        <%# MENU PROFIL / LOG OUT END %>
      </ul>

    </div>
  </div>
</div>
