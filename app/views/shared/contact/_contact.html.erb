<section id="contact">
  <div class="container-contact">
    <div class="row">
        <div class="col-lg-12">
          <form name="sentMessage" id="my-form" novalidate="" action="https://formspree.io/mqkledvv" method="POST">
            <div class="row">
              <div class="col-md-6">

                <div class="form-group">
                  <input type="text" name="Lastame" class="form-control" placeholder="Mon Nom *" id="name" required="" data-validation-required-message="Veuillez entrer votre NOM s'il vous plaît">
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <input type="text" name="Firstname" class="form-control" placeholder="Mon Prénom *" id="firstname" required="" data-validation-required-message="Veuillez entrer votre PRÉNOM s'il vous plaît">
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <input type="email" name="Email" class="form-control" placeholder="Mon Email *" id="email" required="" data-validation-required-message="Veuillez entrer votre EMAIL s'il vous plaît">
                  <p class="help-block text-danger"></p>
                </div>
                <div class="form-group">
                  <input type="text" name="Subject" class="form-control" placeholder="Objet *" id="object" required="" data-validation-required-message="Veuillez entrer un sujet s'il vous plaît"/>
                  <p class="help-block text-danger"></p>
                </div>
                <!-- <div class="form-group">
                  <input type="tel" name ="Telephone" class="form-control" placeholder="Téléphone" id="phone">
                  <p class="help-block text-danger"></p>
                </div> -->
              </div>

              <div class="col-md-6">
                <div class="form-group">
                  <textarea type="text" name="Message" class="form-control" placeholder="Message *" id="message" required="" data-validation-required-message="Please enter a message."></textarea>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="clearfix"></div>
              <div class="col-lg-12 text-center" style="height: 147px";>
                <div id="success"></div>
                <button id="my-form-button" class="mail-btn" type="submit">Envoyer</button>
                <p id="my-form-status"></p>
              </div>
            </div>
          </form>
        </div>
      </div>

  </div>
  <%= render 'shared/footer' %>
</section>
