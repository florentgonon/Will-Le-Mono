<section id="contact">
  <div class="container-contact">
    <div class="trapezoids-title">
      <div class="trapezoid-blue">
        <h1>CONTACT</h1>
        <%= image_tag 'fleche_gauche.png', class: "arrow"%>
      </div>
    </div>
    <h2>Tu souhaites te faire coacher ? Tu veux plus d’informations ?</h2>
    <div class="row">

      <div class="col-lg-9">
        <form name="sentMessage" id="my-form" novalidate="" action="https://formspree.io/meqlpyky" method="POST">
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" name="NOM" class="form-control information" placeholder="Mon Nom *" id="name" required="" data-validation-required-message="Veuillez entrer votre NOM s'il vous plaît">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" name="Prénom" class="form-control information" placeholder="Mon Prénom *" id="firstname" required="" data-validation-required-message="Veuillez entrer votre PRÉNOM s'il vous plaît">
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="text" name="Objet" class="form-control information" placeholder="Objet *" id="object" required="" data-validation-required-message="Veuillez entrer un sujet s'il vous plaît"/>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <input type="email" name="Email" class="form-control information" placeholder="Mon email *" id="email" required="" data-validation-required-message="Veuillez entrer votre EMAIL s'il vous plaît">
                <p class="help-block text-danger"></p>
              </div>
              <!-- <div class="form-group">
                <input type="tel" name ="Telephone" class="form-control" placeholder="Téléphone" id="phone">
                <p class="help-block text-danger"></p>
              </div> -->
            </div>

            <div class="col-md-12">
              <div class="form-group">
                <textarea type="text" name="Message" class="form-control message" placeholder="Mon message *" id="message" required="" data-validation-required-message="Please enter a message."></textarea>
                <p class="help-block text-danger"></p>
              </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-lg-12 text-center">
              <div id="success"></div>
              <button id="my-form-button" class="mail-btn" type="submit">
                <%= link_to pages_contact_path, class: "more-about" do %>
                  <div class="trapezoid-orange"><p>ENVOYER</p></div>
                <% end %>
              </button>
              <p id="my-form-status"></p>
            </div>
          </div>
        </form>
      </div>

      <div class="col-lg-3 adress-phone">
        <div class="logo-site">
          <%= image_tag "logo.png", class: "logo", alt: "Logo Will Le Mono" %>
        </div>
        <div class="adress">
          <%= image_tag "adresse.png", class: "icone-adress", alt: "Icône localisation" %>
          <p class="adress"># 14 Avenue Jean Jaurès</p>
          <p>56100 - LORIENT</p>
        </div>
        <div class="phone">
          <%= image_tag "telephone-bleu.png", class: "icone-phone", alt: "Icône téléphone" %>
          <p># 09 82 27 19 42</p>
        </div>
      </div>
    </div>
    <div class="row all-schedules">
      <div class="col-lg-6 office-schedules">
        <h3 class="title-schedules"><%= image_tag "time-blue.png", class: "icone-clock", alt: "Icône horloge" %> # SECRÉTARIAT</h3>
        <table class="office-schedule">
          <thead>
            <th class="days">
              <p>Mardi & Jeudi</p>
              <p>Mercredi</p>
              <p>Vendredi</p>
              <p>Samedi</p>
              <p>Dimanche & Lundi</p>
            </th>
            <th class="chevron">
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
            </th>
            <th class="schedule-associated">
              <p>14h - 19h</p>
              <p>10h - 12h / 13h - 18h</p>
              <p>13h - 18h</p>
              <p>09h - 12h</p>
              <p>FERMÉ</p>
            </th>
          </thead>
        </table>
      </div>
      <div class="col-lg-6 course-schedules">
        <h3 class="title-schedules"><%= image_tag "time-orange.png", class: "icone-clock", alt: "Icône horloge" %> # COURS THÉORIQUES AVEC MONITEUR</h3>
        <table class="office-schedule">
          <thead>
            <th class="days">
              <p>Mercredi</p>
              <p>Vendredi</p>
            </th>
            <th class="chevron">
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
              <p><i class="fi-xwlrxl-chevron-wide"></i></p>
            </th>
            <th class="schedule-associated">
              <p>17h - 18h</p>
              <p>18h - 19h</p>
            </th>
          </thead>
        </table>
      </div>
    </div>

  </div>
  <%= render 'shared/footer' %>
</section>
