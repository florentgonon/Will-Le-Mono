    <!-- Modal -->
    <div class="modal fade yt" id="yt-player" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="my-modal-content">
          <iframe id="frame" src="" data-src="" class="hide" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </div>
    </div>



    <div class="trapezoids-title">
      <div class="trapezoid-blue">
        <h1>FORMATIONS</h1>
        <%= image_tag 'fleche_gauche.png', class: "arrow"%>
      </div>
    </div>

    <% if admin_signed_in? %>
      <div class="container-btn-new">
        <button class="btn-new"><%= link_to "AJOUTER UNE FORMATION ", new_admin_formation_path %> <i class="fi-cwsuxl-plus-solid"></i></button>
      </div>
    <% end %>

    <h3 class="neon blink">OFFRES SPÃ‰CIALES CONFINEMENT ðŸ’ª</h1>

    <h2 class="title-question">Je souhaites me faire coacher sur...</h2>

    <div class="row">
      <%#= paginate @articles_page %>
      <% @formations.order('id ASC').each_with_index do |formation, index| %>
        <div class="col-lg-4 col-md-6">
          <div class="card">
            <div class="img-formation">
              <%= cl_image_tag(formation.photo, class: "formation-img", id: big_formation?(formation.id)) %>
              <%= link_to "#", id: index, :data => { :src => formation.url_yt, :toggle => "modal", :target => "#yt-player" }, class: "yt-link-button" do %>
                <%= image_tag 'play.png', :data => { :src => formation.url_yt }, class: "formation-play", id: big_formation?(formation.id)%>
              <% end %>
            </div>

            <div class="description-formation">
              <h2><%= formation.title %></h2>
              <%#= formation.id %>
              <p><%= simple_format(formation.description) %></p>
            </div>

            <% if formation.sales_price.present? %>
              <p class="price"><span class="barre"><%= formation.sales_price %></span><i class="fi-xwlrxl-chevron-wide"></i><%= formation.price %></p>
            <% else %>
              <p class="price"><%= formation.price %></p>
            <% end %>

            <div class="trapezoid-btn-coaching">
              <%= link_to "JE VEUX ÃŠTRE COACHÃ‰", formation.url_learnybox, target: "_blank", class: "url_learnybox" %>
            </div>
            <% if admin_signed_in? %>
              <div class="container-btns-update-delete">
                <div class="row">
                  <div class="container-btn-update col-lg-6">
                    <%= link_to edit_admin_formation_path(formation) do %>
                      <button class="btn-update"><i class="fi-cwsuxl-update"></i></button>
                    <% end %>
                  </div>
                  <div class="container-btn-delete col-lg-6">
                    <%= link_to admin_formation_path(formation), method: :delete, data: {confirm: "Es tu sÃ»re de vouloir supprimer cette formation Will ?"} do %>
                      <button class="btn-delete"><i class="fi-cwsuxl-trash-wide"></i></button>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- <div class="container-pagination">
      <%#= paginate @formations_page %>
    </div> -->

  </div>
  <%= render 'shared/footer' %>
</section>
