<section id="sign-in">
  <div class="container-sign-in">
    <div class="logo">
      <%= image_tag 'logo.png', class: "logo-img"%>
    </div>
    <div class="trapezoids">
      <div class="trapezoid-blue">
        <h1>BIENVENUE</h1>
      </div>
      <div class="trapezoid-orange">
        <h1>WILL</h1>
      </div>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    :label => "EMAIL",
                    :label_html => { :class => 'span-blue-label' },
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "Email", :class => 'form-input', :placeholder => "Email" } %>
        <%= f.input :password,
                    :label => "MOT DE PASSE",
                    :label_html => { :class => 'span-blue-label' },
                    required: false,
                    input_html: { autocomplete: "Mot de passe", :class => 'form-input', :placeholder => "Mot de passe" } %>
        <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions log-in">
        <%= f.button :submit, "LET'S GO", :class => "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>
