            <br>
            <% if @article.title.split(" ").size <= 2 %>
            <% else %>
              <%= @article.title.split(" ").slice(3, 10).join(",").gsub(",", " ") %>
            <% end %>
        </h2>
        <p><%= simple_format(@article.description) %></p>
      </div>
    </div>

