      </div>

      <div class="description-article">
        <h2><span class="blue">
            <% if @article.title.split(" ").size <= 2 %>
              <%= @article.title %>
            <% else %>
              <%= @article.title.split(" ").first(3).join(",").gsub(",", " ") %>
            <% end %>
